@model List<app.Models.Answer>
@{
    ViewBag.Title = "PP";
}

@foreach (var i in Model)
{
    <li class="answ_li col-xs-12 col-sm-4 col-md-3 col-lg-2">
            @if (@i.Right == true)
            {
                <div class="qestion__btn col-xs-11" style="background:green;margin:0px;">@i.Text</div>
            }
            else if (@i == ViewBag.WrongAns)
            {
                <div class="qestion__btn col-xs-11" style="background:red;margin:0px;">@i.Text</div>
            }
            else
            {
                <div class="qestion__btn col-xs-11" style="margin:0px;">@i.Text</div>
            }
    </li>
}

